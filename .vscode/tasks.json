{
    "version": "2.0.0",
    "tasks": [
        // --- PILIHAN 1: (ADA NVIDIA) ---
        {
            "type": "shell",
            "label": "1. Build GPU Mode (NVIDIA)",
            "command": "nvcc",
            "args": [
                //"-x", "cu", // Paksa baca semua sebagai CUDA
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/kernel.cu",
                "${workspaceFolder}/src/cpu_solver.cpp",
                
                "-o", "${workspaceFolder}/bin/app.exe",
                
                "-I", "C:/SFML-2.6.1/include",
                "-L", "C:/SFML-2.6.1/lib",
                "sfml-graphics.lib", "sfml-window.lib", "sfml-system.lib",

                "-DENABLE_CUDA", 

                "-Xcompiler", "/openmp",
                "-Xcompiler", "/O2",
                "-Xcudafe", "--diag_suppress=1394"
            ],
            "options": { "cwd": "${workspaceFolder}" },
            "problemMatcher": ["$nvcc"],
            "group": "build"
            //"group": { "kind": "build", "isDefault": true }
        },

        // --- PILIHAN 2: (NON-NVIDIA) ---
        {
            "type": "shell",
            "label": "2. Build CPU Mode (Universal)",
            "command": "cl.exe",
            "args": [
                "/Zi", "/EHsc", "/std:c++17", "/O2", "/openmp",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/cpu_solver.cpp",
                // Note: kernel.cu TIDAK dimasukkan disini

                "/Fe:${workspaceFolder}/bin/app.exe",
                "/I", "C:/SFML-2.6.1/include",
                "/link", "/LIBPATH:C:/SFML-2.6.1/lib",
                "sfml-graphics.lib", "sfml-window.lib", "sfml-system.lib",
                "/SUBSYSTEM:CONSOLE"
            ],
            "options": { "cwd": "${workspaceFolder}" },
            "problemMatcher": ["$msCompile"],
            "group": "build"
        }
    ]
}