{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Sandbox",
            "command": "nvcc",
            "args": [
                //"-x", "cu",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/cpu_solver.cpp",
                "${workspaceFolder}/src/kernel.cu",
                "${workspaceFolder}/src/cpu_solver.cpp",               
                "-o", "${workspaceFolder}/bin/app.exe",
                "-I", "C:/SFML-2.6.1/include",
                "-L", "C:/SFML-2.6.1/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",    
                "-Xcompiler", "/openMP",
                "-Xcompiler", "/O2"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$nvcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}