{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build CPU Only (Serial + OpenMP)",
            "command": "cl.exe",
            "args": [
                // 1. Opsi Kompilasi
                "/Zi", "/EHsc", "/std:c++17", "/O2", "/openmp",

                // 2. Source Files (Hanya CPU)
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/cpu_solver.cpp",

                // 3. Output
                "/Fe:${workspaceFolder}/bin/app.exe",

                // 4. INCLUDE PATHS (PENTING!)
                "/I", "C:/SFML-2.6.1/include",
                // TAMBAHAN WAJIB: Agar cl.exe kenal <cuda_runtime.h> & float2
                // Sesuaikan versi v12.x dengan folder instalasi di laptop Anda
                "/I", "C:/Program Files/NVIDIA GPU Computing Toolkit/CUDA/v12.6/include",

                // 5. LINKER
                "/link",
                "/LIBPATH:C:/SFML-2.6.1/lib",
                "sfml-graphics.lib",
                "sfml-window.lib",
                "sfml-system.lib",
                
                // Tambahan: Agar console tidak langsung nutup (opsional)
                "/SUBSYSTEM:CONSOLE"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$msCompile"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compiler MSVC (CPU Only mode)"
        }
    ]
}