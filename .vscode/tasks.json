{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build CUDA N-Body",
            "command": "nvcc",
            "args": [
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/kernel.cu",
                "-o",
                "${workspaceFolder}/bin/app.exe",
                "-I", "C:/SFML-2.6.1/include",
                "-L", "C:/SFML-2.6.1/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$nvcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compiler menggunakan NVCC tanpa flag versi manual"
        }
    ]
}